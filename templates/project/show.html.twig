{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!{% endblock %}

{% block body %}
<h1>{{ project.name }}</h1>

    <p>{{ project.description }}</p>
    
    {% for image in project.images %}
        <img src="{{ vich_uploader_asset(image, 'imageFile') }}" alt="">
    {% endfor %}
    
    <h2>    {{ 'nature'|trans }}</h2>


    <a href="{{ path('delete_project', {id:project.id}) }}" class="btn btn-danger">remove</a>
    <a href="{{ path('add_image', {id:project.id}) }}" class="btn btn-danger">image</a>




{% endblock %}
