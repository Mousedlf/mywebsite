{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!{% endblock %}

{% block body %}

    <div class="col-9">
        <h1 class="mt-5">{{ project.name }}</h1>

        {% if locale == 'fr' %}
            <p>{{ project.descriptionFr }}</p>
            {% else %}
                <p>{{ project.description }}</p>
        {% endif %}

    </div>

    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('edit_project', {id:project.id}) }}" class="badge rounded-pill text-bg-warning">{{ "btn.edit"|trans }}</a>
    <a href="{{ path('delete_project', {id:project.id}) }}" class="badge rounded-pill text-bg-danger">{{ "btn.delete"|trans }}</a>
    <a href="{{ path('add_image', {id:project.id}) }}" class="badge rounded-pill text-bg-warning">{{ "btn.images"|trans }}</a>
    {% endif %}

    <div class="row mt-5">
        <div class="card col-4">images </div>
        <div class="card col-4">images </div>
        <div class="card col-4">images </div>

    </div>
